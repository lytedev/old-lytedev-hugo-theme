#site-header
  position relative
  z-index 1
  overflow-x hidden
  color #fff
  text-shadow 0rem 0.05rem 0.2rem #000
  padding 2rem
  display flex
  flex-direction column

  &.hero-header
    height 100vh

    #intro
      display flex
      align-self center
      flex-grow 1

      .wrapper
        min-height 20rem
        display flex
        flex-direction column
        flex-grow 1
        align-self center
        align-items center
        text-align center

  // the background image pseudo element
  &::before
    position absolute
    content ""
    height 100vh
    width 100%
    top 0
    left 0
    bottom 0
    right 0
    background-color $brand-primary-color
    background-image url('~static/img/cover.jpg')
    // background-image url('http://i.imgur.com/et0CsOj.jpg')
    background-repeat no-repeat
    background-attachment fixed
    background-position center
    background-size cover
    z-index -5

  // the overlay for the background image
  &::after
    position absolute
    content ""
    height 100%
    width 100%
    top 0
    left 0
    background-color rgba(0, 0, 0, 0.5)
    z-index -4

  #intro
    &.dark-text
      color #333
      text-shadow 0rem 0.05rem 0.2rem #fff

    h2
      margin 0
      padding 0
      font-size 4.0rem
      line-height 2em
      font-weight 300

    p
      margin 0
      padding 0
      font-size 2.4rem
      line-height 1.4em
